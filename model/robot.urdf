<?xml version="1.0"?>
<!DOCTYPE xml>
<robot name="unicycle">
    <material name="black">
        <color rgba="0.2 0.2 0.2 1" />
    </material>
    <material name="red">
        <color rgba="1 0 0 2.5" />
    </material>

    <link name="base">
        <inertial>
            <mass value="0.001" />
            <inertia ixx="0.001" ixy="0" ixz="0.01" iyy="0" iyz="0" izz="0.01" />
        </inertial>
    </link>

    <link name="wheel">
        <inertial>
            <mass value="3.0" />
            <inertia ixx="0.1" ixy="0" ixz="0.1" iyy="0" iyz="0" izz="0.1" />
        </inertial>
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0" />
            <geometry>
                <cylinder radius="0.3" length="0.04" />
            </geometry>
            <material name="black" />
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.3" length="0.04" />
            </geometry>
        </collision>
    </link>
    <joint name="wheel" type="continuous">
        <axis xyz="0 0 1" />
        <origin xyz="0 0 0" rpy="-1.57 0 0" />
        <parent link="base" />
        <child link="wheel" />
    </joint>

    <link name="left_pedal">
        <inertial>
            <mass value="0.001" />
            <inertia ixx="0.001" ixy="0" ixz="0.01" iyy="0" iyz="0" izz="0.01" />
        </inertial>
        <visual>
            <geometry>
                <cylinder radius="0.01" length="0.1" />
            </geometry>
            <material name="red" />
        </visual>
    </link>
    <joint name="left_pedal" type="fixed">
        <origin xyz="0.2 0 -0.1" rpy="0 0 0" />
        <parent link="wheel" />
        <child link="left_pedal" />
    </joint>

    <link name="right_pedal">
        <inertial>
            <mass value="0.001" />
            <inertia ixx="0.001" ixy="0" ixz="0.01" iyy="0" iyz="0" izz="0.01" />
        </inertial>
        <visual>
            <geometry>
                <cylinder radius="0.01" length="0.1" />
            </geometry>
            <material name="red" />
        </visual>
    </link>
    <joint name="right_pedal" type="fixed">
        <origin xyz="-0.2 0 0.1" rpy="0 0 0" />
        <parent link="wheel" />
        <child link="right_pedal" />
    </joint>

    <link name="human">
        <inertial>
            <mass value="50" />
            <inertia ixx="0" ixy="0" ixz="0" iyy="0" iyz="0" izz="0" />
        </inertial>
        <visual>
            <geometry>
                <box size="0.1 0.1 0.1" />
            </geometry>
            <material name="red" />
        </visual>
    </link>
    <joint name="human" type="prismatic">
        <axis xyz="0 1 0" />
        <limit lower="-0.1" upper="0.1" effot="0" velocity="0" />
        <origin xyz="0 0 0" rpy="0 0 0" />
        <parent link="base" />
        <child link="human" />
    </joint>
</robot>
